# Bitesize Cúrsaí WordPress Plugin - Environment Configuration
# Copy this file to .env and configure for your deployment environment

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production Server Details (SiteGround-friendly defaults)
# - Hostname: from Site Tools → Devs → SSH Keys Manager / SSH Credentials
# - Username: SiteGround SSH username (not your cPanel/email)
# - Path: /home/<sg_user>/www/cursai.bitesize.irish/public_html/wp-content/plugins
DEPLOY_HOST=ams7.siteground.eu
DEPLOY_USER=your_sg_username
DEPLOY_PATH=/home/u1671-zcwutggl3rnj/www/cursai.bitesize.irish/public_html/wp-content/plugins

# Site URL for health checks
SITE_URL=https://cursai.bitesize.irish

# Backup Configuration
BACKUP_PATH=/tmp/bitesize-cursai-plugin-backups
BACKUP_RETENTION_DAYS=30

# SSH Configuration (optional)
# SiteGround's SSH port is typically 18765
DEPLOY_SSH_PORT=18765
DEPLOY_SSH_KEY_PATH=~/.ssh/id_ed25519

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=production

# Build Options
SKIP_TESTS=false
SKIP_VERSION_BUMP=false

# Git Integration
AUTO_PUSH=false
COMPRESS_ASSETS=true

# =============================================================================
# WORDPRESS CONFIGURATION (for development/testing)
# =============================================================================

# Local WordPress Installation
WP_PATH=/path/to/your/wordpress
WP_URL=http://localhost/wordpress

# Database (for testing - optional)
DB_HOST=localhost
DB_NAME=wordpress_test
DB_USER=wp_user
DB_PASS=wp_password

# =============================================================================
# PLUGIN SETTINGS
# =============================================================================

# Plugin Information
PLUGIN_VERSION=1.0.0
PLUGIN_AUTHOR=Bitesize Irish
PLUGIN_URL=https://www.bitesize.irish

# Debug Settings
WP_DEBUG=false
PLUGIN_DEBUG=false

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Deployment Notifications (optional)
NOTIFY_EMAIL=admin@bitesize.irish
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# =============================================================================
# ADVANCED DEPLOYMENT OPTIONS
# =============================================================================

# Deployment Strategy
DEPLOYMENT_STRATEGY=rsync  # rsync, ftp, sftp, git
ATOMIC_DEPLOYMENT=true     # Create symlinks for zero-downtime deployment
AUTO_BACKUP=true           # Backup before deployment
ROLLBACK_ON_FAILURE=true   # Auto-rollback if deployment fails

# File Exclusions (comma-separated)
EXCLUDE_PATTERNS=.git*,node_modules,tests,*.md,gulpfile.js

# Post-Deployment Commands (optional)
POST_DEPLOY_COMMANDS="wp plugin activate bitesize-cursai-plugin,wp cache flush"

# =============================================================================
# STAGING ENVIRONMENT (optional)
# =============================================================================

# Staging Server (for testing before production)
STAGING_HOST=staging.cursai.bitesize.irish
STAGING_USER=www-data
STAGING_PATH=/var/www/staging/wp-content/plugins
STAGING_WP_URL=https://staging.cursai.bitesize.irish

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# File Permissions
DEPLOY_FILE_PERMISSIONS=644
DEPLOY_DIR_PERMISSIONS=755

# Security Checks
VERIFY_SSL=true
CHECK_DISK_SPACE=true
MIN_DISK_SPACE_MB=500

